#:import hex kivy.utils.get_color_from_hex
#: include main.py

<Buttons>:
    text: "menu"
    on_press: app.screen_manager.current = 'menu'
    size_hint: 0.6 , 0.1
    height: dp(40)
    pos_hint: {"x":1, "top": 1}
    background_normal: ''
    background_color: hex("#544759")

<ManagerScreens@ScreenManager>:
    MainScreen:
        id: mainscr

    ProfileScreen:
        id: profilescr

    AddIngrScreen:
        id: addingrscr

    SearchScreen:
        id: searchscr

    MenuScreen:
        id: menu

<MainScreen@Screen>:
    name: 'main'

    BoxLayout(orientation: 'horizontal'):
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: "menu"
                    on_press: app.screen_manager.current = 'menu'
                    size_hint: 0.3 , 0.061
                    background_normal: ''
                    background_color: hex("#544759")
                TextInput:
                    id: field_search
                    multiline: False
                    height: dp(40)
                    size_hint_y: None
                    hint_text: "search"
        BoxLayout:
            canvas.before:
                Color:
                    rgba: hex("#463244")
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: 'Hello World'
            Label:
                text: 'Hello World'
        BoxLayout:
            Label:
                text: 'Hello World'
            Label:
                text: 'Hello World'

<MenuScreen@Screen>:
    name: 'menu'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: hex("#463244")
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'main'
            height: dp(40)
            size_hint_y: None
            pos_hint: {"x":0, "y": 1}
            on_press: app.screen_manager.current = 'main'
            background_normal: ''
            background_color: hex("#544759")

        Button:
            text: 'profile'
            height: dp(40)
            size_hint_y: None
            pos_hint: {"x":0, "y": 0.85}
            on_press: app.screen_manager.current = 'profile'
            background_normal: ''
            background_color: hex("#544759")

        Button:
            text: 'add'
            height: dp(40)
            size_hint_y: None
            pos_hint: {"x":0, "bottom": 0.7}
            on_press: app.screen_manager.current = 'addingr'
            background_normal: ''
            background_color: hex("#544759")

        Button:
            text: 'search'
            height: dp(40)
            size_hint_y: None
            pos_hint: {"x":0, "bottom": 0.55}
            on_press: app.screen_manager.current = 'search'
            background_normal: ''
            background_color: hex("#544759")



<ProfileScreen@Screen>:
    name: 'profile'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: hex("#463244")
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: "menu"
            on_press: app.screen_manager.current = 'menu'
            size_hint: 0.3 , 0.1
            pos_hint: {"x":0, "bottom": 1}
            background_normal: ''
            background_color: hex("#544759")
        Label:
            text: 'your profile'



<AddIngrScreen>:
    name: 'addingr'
    _app: app

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: hex("#463244")
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: "menu"
            on_press: app.screen_manager.current = 'menu'
            size_hint: 0.5 , 0.1
            pos_hint: {"x":0, "top": 1}
            background_normal: ''
            background_color: hex("#544759")
        TextInput:
            id: field_food
            multiline: False
            height: dp(40)
            size_hint_y: None
            hint_text: "Name of ingredient"
        Button:
            text: "Add"
            size_hint_y: None
            height: dp(40)
            on_press: if field_food.text != '': root.button_clicked(field_food.text); field_food.text = ''
            background_normal: ''
            background_color: hex("#544759")
        Label:
            id: result_label


<SearchScreen>:
    name: 'search'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: hex("#463244")
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: "menu"
            on_press: app.screen_manager.current = 'menu'
            size_hint: 0.6 , 0.1
            height: dp(40)
            pos_hint: {"x":0, "bottom": 0}
            background_normal: ''
            background_color: hex("#544759")

        Button:
            size_hint: 0.6 , 0.1
            text: 'search'
            background_normal: ''
            background_color: hex("#544759")
        Label:
            text: 'recipe'